
model OrderItem {
  id                          Int      @id @default(autoincrement())
  order_id                    Int
  order                       Order   @relation(fields: [order_id], references: [id])
  product_id                  Int
  product                     Product @relation(fields: [product_id], references: [id])
  quantity                    Int
  unit_price                  Float
  total_price                 Float
  notes                       String?

  created_at                  DateTime @default(now())
  updated_at                  DateTime @updatedAt

  @@map("order_items")
} 