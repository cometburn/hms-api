
model Order {
  id                                Int          @id @default(autoincrement())
  booking_id                        Int
  booking                           Booking     @relation(fields: [booking_id], references: [id])
  order_time                        DateTime
  total_price                       Float
  status                            String
  notes                             String?
  order_items                       OrderItem[]

  created_at                        DateTime @default(now())
  updated_at                        DateTime @updatedAt

  @@map("orders")
} 